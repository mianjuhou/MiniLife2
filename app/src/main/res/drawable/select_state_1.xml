<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="2dp"/>
            <solid android:color="@android:color/white"/>
            <stroke android:color="#880000FF" android:width="1dp" android:dashWidth="2dp"
                android:dashGap="2dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="2dp"/>
            <solid android:color="@android:color/white"/>
            <stroke android:color="#FF0000FF" android:width="1dp" android:dashGap="2dp" android:dashWidth="2dp"/>
        </shape>
    </item>
</selector>